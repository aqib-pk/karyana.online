rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    function isStoreOwner(storeId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/stores/$(storeId)).data.storeOwnerId == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn();
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if isSuperAdmin();
    }

    match /stores/{storeId} {
      // Catalog data is publicly readable for storefront browsing.
      allow read: if true;
      allow create: if isSuperAdmin();
      allow update, delete: if isSuperAdmin() || isStoreOwner(storeId);

      match /products/{productId} {
        allow read: if true;
        allow create, update, delete: if isSuperAdmin() || isStoreOwner(storeId);
      }

      match /settings/{settingId} {
        allow read: if true;
        allow create, update, delete: if isSuperAdmin() || isStoreOwner(storeId);
      }

      match /categories/{categoryId} {
        allow read: if true;
        allow create, update, delete: if isSuperAdmin() || isStoreOwner(storeId);
      }

      match /orders/{orderId} {
        // Customers place orders without authentication, but only super admins or the store owner can read or modify them.
        allow create: if true;
        allow read, update, delete: if isSuperAdmin() || isStoreOwner(storeId);
      }

      match /offlineOrders/{orderId} {
        allow read, create, update, delete: if isSuperAdmin() || isStoreOwner(storeId);
      }
    }

    match /orders/{orderId} {
      allow create: if true;
      allow read: if isSuperAdmin() || (isSignedIn() && request.auth.uid == resource.data.customerId);
      allow update, delete: if isSuperAdmin();
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
  }
}
